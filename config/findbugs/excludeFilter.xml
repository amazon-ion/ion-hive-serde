<FindBugsFilter>

  <!-- skip test files for non JUnit related rules -->
  <Match>
    <Class name="~.*\.*Test"/>
    <Not>
      <Bug code="IJU"/>
    </Not>
  </Match>

  <!-- There is a lot of unchecked cast required due to how Hive SerDe API is structured -->
  <Match>
    <Bug pattern="BC_UNCONFIRMED_CAST"/>
  </Match>
  <Match>
    <Bug pattern="BC_BAD_CAST_TO_ABSTRACT_COLLECTION"/>
  </Match>
</FindBugsFilter>
